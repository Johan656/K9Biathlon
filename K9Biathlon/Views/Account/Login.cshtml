@model LoginViewModel
@{
    ViewData["Title"] = "Logga in";
    ViewData["Description"] = $"Logga in på hemsidan";
}
@section head {
    <link rel="stylesheet" href="~/css/login.scss" />
}
<form method="post" id="login" aria-labelledby="legend" asp-route-returnUrl="@ViewData["ReturnUrl"]">
    <div asp-validation-summary="All"></div>
    <fieldset>
        <legend id="legend">Sign in</legend>
        <input asp-for="UserName" aria-label="Användarnamn" autofocus required placeholder="Användarnamn" />
        <input asp-for="Password" aria-label="Lösenord" required placeholder="Lösenord" />
        <input asp-for="RememberMe" />
        <label asp-for="RememberMe">Kom ihåg</label>
        <input type="submit" value="Logga in" />
    </fieldset>
</form>